<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/dashboard_list_card"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="4dp"
        android:padding="16dp"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/dashboard_user_profile_photo"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/job_logo_1"
                android:background="@android:color/holo_blue_light"/>

            <TextView
                android:id="@+id/dashboard_user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dashboard_user_profile_photo"
                android:layout_marginTop="8dp"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:text="Christian Daniel N.Perez"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dashboard_user_profile_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_below="@+id/dashboard_user_profile_name"
                android:text="Construction Worker - Meycauayan"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>