<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/functionMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/functionMessageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Christian Perez sent you a Job Request."
            android:padding="4dp"
            android:textAlignment="center"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/selfMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/selfMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi!"
            android:layout_alignParentRight="true"
            android:textAlignment="textEnd"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/message_text"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/othersmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/othersmessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Cedie Ang pogi mo!"
            android:layout_alignParentLeft="true"
            android:textAlignment="textEnd"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/message_text"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimaryDark"/>

    </RelativeLayout>
</LinearLayout>
