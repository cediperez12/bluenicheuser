<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/review_layout_sender_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/job_logo_3"
                android:background="@color/shadowgray"/>

            <TextView
                android:id="@+id/review_layout_sender_name_txtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/review_layout_sender_img"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="8dp"
                android:text="Christian Daniel N. Perez"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/review_layout_sender_activity_txtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/review_layout_sender_name_txtv"
                android:layout_toRightOf="@id/review_layout_sender_img"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:text="He's a good worker, does his job on the time and gives a really good effort."
                />

            <TextView
                android:id="@+id/review_layout_sender_rating_txtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/review_layout_sender_activity_txtv"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Rated 5 Stars for the job [Eat Me]"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>