<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">
        
        <ImageView
            android:id="@+id/messages_item_layout_user_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/messages_item_layout_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/messages_item_layout_user_img"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:text="Christian Perez(24)"/>

        <TextView
            android:id="@+id/messages_item_layout_user_new_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/messages_item_layout_user_name"
            android:layout_toEndOf="@id/messages_item_layout_user_img"
            android:layout_marginLeft="24dp"
            android:textSize="12sp"
            android:text="Christian: Ang gwapo mo naman..."/>

        <TextView
            android:id="@+id/messages_item_layout_user_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/messages_item_layout_user_new_message"
            android:layout_toEndOf="@id/messages_item_layout_user_img"
            android:layout_marginLeft="24dp"
            android:textSize="10sp"
            android:text="9:21 PM"/>
        
    </RelativeLayout>

</LinearLayout>